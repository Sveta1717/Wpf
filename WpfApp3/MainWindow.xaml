<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750" Width="800"
        Background ="Beige">
    <StackPanel>
        <Label 
            Content="Основи WPF"
            FontSize="20"
            FontWeight="Black"
            HorizontalContentAlignment="Center"/>
        <Button
            Click="ButtonConteiners_Click"
            Content="1. Контейнери"
            FontSize="18"
            HorizontalAlignment="Left"
            Margin="20,10"
            Padding="10,5"/>
        <Button
            Click="ButtonMines_Click"
            Content="2. Взаємодія елементів (Сапер)"
            FontSize="18"
            HorizontalAlignment="Left"
            Margin="20,10"
            Padding="10,5"/>
        <Button
            Click="ButtonsCanvas_Click"
            Content="3. Teніс"
            FontSize="18"
            HorizontalAlignment="Left"
            Margin="20,10"
            Padding="10,5"/>       
    </StackPanel>   
 
</Window>
