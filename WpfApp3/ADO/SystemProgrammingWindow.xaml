<Window x:Class="WpfApp3.ADO.SystemProgrammingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3.ADO"
        mc:Ignorable="d"
        Title="SystemProgrammingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>            
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Button x:Name="StartThread"
                    Click="StartThread_Click" 
                    Content="Запустити поток"/>
            <Button x:Name="ShowMessage"
                    Click="ShowMessage_Click" 
                    Content="Показати повідомлення"/>
            <TextBlock x:Name="Messages"/>
        </StackPanel>
    </Grid>
</Window>
